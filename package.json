{
  "name": "@openhps/cordova",
  "version": "0.1.0",
  "description": "Open Hybrid Positioning System",
  "author": "Maxim Van de Wynckel",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenHPS/openhps-cordova.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./imu": {
      "import": "./dist/esm/IMUSourceNode.js",
      "require": "./dist/cjs/IMUSourceNode.js",
      "types": "./dist/esm/IMUSourceNode.d.ts"
    },
    "./wlan": {
      "import": "./dist/esm/WLANSourceNode.js",
      "require": "./dist/cjs/WLANSourceNode.js",
      "types": "./dist/esm/WLANSourceNode.d.ts"
    },
    "./ble": {
      "import": "./dist/esm/BLESourceNode.js",
      "require": "./dist/cjs/BLESourceNode.js",
      "types": "./dist/esm/BLESourceNode.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "lint": "eslint src/**",
    "clean": "shx rm -rf ./dist && shx rm -rf ./docs/out",
    "build": "npm run clean && npm-run-all --parallel build:esm build:cjs build:typedoc",
    "build:esm": "tsc --module es2015 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs  --outDir dist/cjs",
    "build:typedoc": "typedoc --options docs/typedoc.json",
    "bump:development": "standard-version --prerelease alpha -m 'chore(alpha): %s' --skip.changelog",
    "bump:beta": "standard-version --prerelease beta -m 'chore(beta): %s' --skip.changelog",
    "bump:release": "standard-version -m 'chore(release): %s' --skip.changelog"
  },
  "keywords": [
    "openhps",
    "cordova",
    "phonegap",
    "ionic"
  ],
  "peerDependencies": {
    "@openhps/core": ">=0.3.2",
    "@openhps/imu": ">=0.1.1",
    "@openhps/rf": ">=0.1.4",
    "reflect-metadata": ">=0.1.13",
    "wifiwizard2": ">=3.1.1",
    "@awesome-cordova-plugins/ble": "^6.3.0",
    "cordova-plugin-ble-central": "^1.6.1"
  },
  "devDependencies": {
    "@awesome-cordova-plugins/ble": "^6.3.0",
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@openhps/core": ">=0.3.55",
    "@openhps/imu": "^0.1.3",
    "@openhps/rf": "^0.1.17",
    "@purtuga/esm-webpack-plugin": "^1.5.0",
    "@types/chai": "^4.3.4",
    "@types/cordova": "11.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "chai": "^4.3.7",
    "cordova-plugin-ble-central": "^1.6.1",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-deprecation": "^1.3.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^40.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "reflect-metadata": ">=0.1.13",
    "shx": "^0.3.4",
    "standard-version": "^9.5.0",
    "ts-node": ">=10.9.1",
    "typedoc": "^0.23.25",
    "typescript": "^4.9.5",
    "wifiwizard2": "^3.1.1"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
